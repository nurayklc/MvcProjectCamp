
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Add Heading</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid p-2">
        <form class="form-group" action="/Heading/AddHeading" method="post">
            <div class="p-2">
                <label class="label text-black-50">Heading Name</label>
                <input type="text" placeholder="Heading Name" name="AuthorName" class="form-control" />
            </div>
            <div class="p-2">
                <label class="label text-black-50">Category</label>
                <select name="categories">
                    @foreach (var item in ViewBag.valueCategory)
                    {
                        <option class="form-control" value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="p-2">
                <label class="label text-black-50">Author</label>
                <select name="authorList">
                    @foreach (var item in ViewBag.valueAuthor)
                    {
                        <option class="form-control" value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="p-2">
                <button class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</body>
</html>

