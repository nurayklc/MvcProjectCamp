@using EntityLayer.Concrete
@model Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update Category Page</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid p-2">
        <form class="form-group" action="/AdminCategory/UpdateCategory" method="post">
            <div class="p-2">
                <label class="label text-black-50">Category Name</label>
                <input type="text" value="@Model.CategoryName" name="CategoryName" class="form-control" />
                <span class="field-validation-error text-danger" data-valmsg-for="CategoryName" data-valmsg-replace="true">
                    The CategoryName field is required.
                </span>
            </div>
            <div class="p-2">
                <label class="label text-black-50">Category Description</label>
                <textarea type="text" name="CategoryDescription" class="form-control" >@Model.CategoryDescription</textarea>
                
            </div>
            <div class="p-2">
                <label class="label text-black-50">Category Status</label>
                <input type="text" value="@Model.CategoryStatus" name="CategoryDescription" class="form-control" />
                
            </div>
            <div class="p-2">
                <button class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</body>
</html>