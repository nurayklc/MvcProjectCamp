@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetCategoryList</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <table class="table table-striped table-hover">
            <tr>
                <th>#</th>
                <th>Kategori Ad</th>
                <th>Açıklama</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Başlıklar</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDescription</td>
                    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                    <td><a href="#" class="btn btn-info">Güncelle</a></td>
                    <td><a href="#" class="btn btn-info">Başlıklar</a></td>
                </tr>
            }
        </table>
        <a href="/AdminCategory/AddCategory" class="btn btn-primary">Add Category</a>
    </div>
</body>
</html>
