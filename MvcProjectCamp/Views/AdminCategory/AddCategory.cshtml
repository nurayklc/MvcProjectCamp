
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCategory</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid p-2">
        <form class="form-group" action="/AdminCategory/AddCategory" method="post">
            <div class="p-2">
                <label class="label text-black-50">Category Name</label>
                <input type="text" placeholder="Category Name" name="CategoryName" class="form-control" />
            </div>
            <div class="p-2">
                <label class="label text-black-50">Category Description</label>
                <input type="text" placeholder="Category Description" name="CategoryDescription" class="form-control" />
            </div>
            <div class="p-2">
                <button class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</body>
</html>
